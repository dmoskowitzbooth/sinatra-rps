<!-- /views/scissors.erb -->

<!DOCTYPE html>
<html>
<head>
  <title>Scissors</title>
</head>

<body>

  <ul>
    <li><a href="/app/rock">Play Rock</a></li>
    <li><a href="/app/paper">Play Paper</a></li>
    <li><a href="/app/scissors">Play Scissors</a></li>
  </ul>

<h1>We played scissors!</h1>
  <p><%= @outcome %></p>

  <% if @play == "paper"%>
   <p>We won!</p>
  <% elsif @play == "rock"%>
   <p>We lost!</p>
  <% else %>
   <p>We tied!</p>
  <% end %>
</body>
</html>
